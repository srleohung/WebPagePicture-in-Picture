{
  "manifest_version": 2,
  "name": "Web Page Picture-in-Picture",
  "description": "Web page picture-in-picture mode allows you to view different web pages in a floating window.",
  "version": "0.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon32.png",
    "128": "icon192.png",
    "512": "icon512.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts.js"
      ]
    }
  ]
}